# Masaad Estimator — Backend Environment Variables
# Copy to .env and fill in your values

# ─────────────────────────────────────────────────────────────
# DATABASE
# ─────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://masaad_admin:password123@localhost:5432/masaad_estimator

# ─────────────────────────────────────────────────────────────
# LLM — Free Tier (Groq primary, Gemini fallback)
# ─────────────────────────────────────────────────────────────
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxx
LLM_PRIMARY_MODEL=groq/llama-3.1-70b-versatile

GOOGLE_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxx
LLM_FALLBACK_MODEL=gemini/gemini-1.5-flash

# ─────────────────────────────────────────────────────────────
# REDIS + CELERY (Background Tasks)
# ─────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ─────────────────────────────────────────────────────────────
# JWT AUTH
# ─────────────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change_this_to_64_char_random_string_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ─────────────────────────────────────────────────────────────
# FILE STORAGE
# ─────────────────────────────────────────────────────────────
UPLOAD_DIR=uploads
DOWNLOAD_DIR=downloads

# ─────────────────────────────────────────────────────────────
# OPTIONAL: DWG CONVERSION
# ─────────────────────────────────────────────────────────────
ODA_CONVERTER_PATH=/usr/bin/ODAFileConverter
